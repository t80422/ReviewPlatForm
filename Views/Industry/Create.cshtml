@{
    Layout = "~/Views/Shared/Layout.cshtml";

    int perm = Session["perm"] != null ? (int)Session["perm"] : -1;
    // 1. 無登入-1
    // 2. 管理者0、PM1、工讀生2
    // 3. 業者3
}

@model WebApplication1.Models.Industry.Industry

<main class="container-wrap">
    <div class="container-main">
        <div class="form-wrap">
            @using (Html.BeginForm("Create", "Industry"))
            {
               @Html.AntiForgeryToken()
               @Html.ValidationSummary(true, "", new {@class="text-danger"})
                <div class="form-main">
                    <div class="form-title">
                        <h3>旅宿業者資料</h3>
                    </div>

                    <div class="form-content">
                        <div class="form-flex">
                            <div class="form-group">
                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">旅宿名稱</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.Name)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label>旅宿別</label>
                                        <div class="input">
                                            <!--多選一 (畫面顯示名稱:回傳值) 觀光旅館:1 旅館:2 民宿:3-->
                                        </div>
                                    </div>
                                    <div class="form-input">
                                        <label for="">公司名稱</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.Company)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">電話</label>
                                        <div class="input">                                            
                                            @Html.TextBoxFor(x=>x.Phone)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">傳真</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.Fax)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">縣市</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.City)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">地址</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.Address)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">Email</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.Email)
                                        </div>
                                    </div>
                                    <div class="form-input">
                                        <label for="">銀行戶名</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=> x.BankAcctName)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">銀行代碼(含分公司)</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x=>x.BankCode)
                                        </div>
                                    </div>
                                </div>

                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">承辦人</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.Owner)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">承辦人電話</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.OwnerPhone)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">統編(登入帳號)</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.TaxID)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">銀行帳號</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.BankAcct)
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label>銀行存摺</label>
                                        <div class="input file">
                                            <input type="file">
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>

                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label for="">旅館登記證</label>
                                        <div class="input file">
                                            <input type="file">
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>

                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label>商業登記</label>
                                        <div class="input file">
                                            <input type="file">
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>

                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label>稅籍證明</label>
                                        <div class="input file">
                                            <input type="file">
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>

                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label for="">銀行帳號</label>
                                        <div class="input">
                                            @Html.TextBoxFor(x => x.BankAcct)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-btn">
                    <button class="btn-cancel" type="button" onclick="history.back()">返回</button>
                    <button class="btn-submit" type="submit">儲存</button>
                </div>
            }
        </div>
    </div>
</main>

