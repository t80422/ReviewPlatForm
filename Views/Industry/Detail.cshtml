@{
    Layout = "~/Views/Shared/Layout.cshtml";

    int perm = Session["perm"] != null ? (int)Session["perm"] : 3;    
// 1. 無登入-1
// 2. 管理者0、PM1、工讀生2
// 3. 業者3
}

@model WebApplication1.Models.industry

<main class="container-wrap">
    <div class="container-main">
        @*<div class="tool-wrap">
            <div class="tool-btn">
                <button class="btn-cancel" type="button" onclick="location.href='@Url.Action("ResetPwd", "Login", new {id=Model.id_it_id})'">修改密碼</button>
            </div>
        </div>*@

        <form>
            <div class="form-wrap">

                <div class="form-main">
                    <div class="form-title">
                        <h3>旅宿業者資料</h3>
                    </div>

                    <div class="form-content">
                        <div class="form-flex">
                            <div class="form-group">
                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">旅宿名稱</label>
                                        <div class="input">
                                            <p>@Model.id_name</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label>旅宿別</label>
                                        <div class="input">
                                            <!--多選一 (畫面顯示名稱:回傳值) 觀光旅館:1 旅館:2 民宿:3-->
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">公司名稱</label>
                                        <div class="input">
                                            <p>@Model.id_company</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">公司電話</label>
                                        <div class="input">
                                            <p>@Model.id_tel</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">傳真</label>
                                        <div class="input">
                                            <p>@Model.id_fax</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">縣市</label>
                                        <div class="input">
                                            <p>@Model.id_city</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">地址</label>
                                        <div class="input">
                                            <p>@Model.id_address</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">Email</label>
                                        <div class="input">
                                            <p>@Model.id_email</p>
                                        </div>
                                    </div>
                                    <div class="form-input">
                                        <label for="">銀行戶名</label>
                                        <div class="input">
                                            <p>@Model.id_bank_acct_name</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">銀行代碼(含分公司)</label>
                                        <div class="input">
                                            <p>@Model.id_bank_code</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">承辦人</label>
                                        <div class="input">
                                            <p>@Model.id_owner</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">承辦人電話</label>
                                        <div class="input">
                                            <p>@Model.id_tel_owner</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">承辦人分機</label>
                                        <div class="input">
                                            <p>@Model.id_extension</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">承辦人手機</label>
                                        <div class="input">
                                            <p>@Model.id_owner_phone</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">統編(登入帳號)</label>
                                        <div class="input">
                                            <p>@Model.id_tax_id</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">總房間數</label>
                                        <div class="input">
                                            <p>@Model.id_room</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">銀行帳號</label>
                                        <div class="input">
                                            <p>@Model.id_bank_acct</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label class="required">銀行存摺</label>
                                        <div class="input file">
                                            <input type="text" readonly />
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>
                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label class="required">營業執照或登記證</label>
                                        <div class="input file">
                                            <input type="text" readonly />
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>
                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label>商業登記或稅籍證明</label>
                                        <div class="input file">
                                            <input type="text" readonly />
                                            <span></span>
                                            <button class="onfile" type="button">上傳檔案</button>
                                        </div>
                                        @if (perm == 3)
                                        {<label class="demo-file">範本檔</label>}
                                    </div>

                                    <div class="form-input">
                                        <label for="">審核狀態</label>
                                        <div class="input">
                                            <p>@Model.id_review</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-btn">
                    <button class="btn-cancel" type="button" onclick="history.back()">返回</button>
                </div>
            </div>
        </form>
    </div>
</main>

