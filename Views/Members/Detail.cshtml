@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model WebApplication1.Models.member

<main class="container-wrap">
    <div class="container-main">
        <div class="form-wrap">
            <form>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-main">
                    <div class="form-title">
                        <h3>人員詳細資料</h3>
                    </div>

                    <div class="form-content">
                        <div class="form-flex">
                            <div class="form-group">
                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">姓名</label>
                                        <div class="input">
                                            <p>@Model.mb_name</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">身分證</label>
                                        <div class="input">
                                            <p>@Model.mb_id_card</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">加保</label>
                                        <div class="input">
                                            <p>@ViewBag.mb_add_insur</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">備註</label>
                                        <div class="input">
                                            <p>@Model.mb_memo</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">勞保序號</label>
                                        <div class="input">
                                            <p>@Model.mb_insurance_id</p>
                                        </div>
                                    </div>
                                    
                                    <div class="form-input">
                                        <label for="">職務</label>
                                        <div class="input">
                                            <p>@Model.mb_position</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">勞動契約</label>
                                        <div class="input file">
                                            @*<input type="file">
                <span></span>
                <button type="button" class="onfile">上傳檔案</button>*@
                                            <a href="~/assets/upload/Members/@Model.mb_contract" target="_blank">@Model.mb_contract_name</a>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">薪資證明</label>
                                        <div class="input file">
                                            @*<input type="file">
                <span></span>
                <button type="button" class="onfile">上傳檔案</button>*@
                                            <a href="~/assets/upload/Members/@Model.mb_income_certificate" target="_blank">@Model.mb_income_certificate_name</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-col">
                                    <div class="form-input">
                                        <label for="">出生年(民國)</label>
                                        <div class="input">
                                            <p>@Model.mb_birthday</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">投保薪資</label>
                                        <div class="input">
                                            <p>@Model.mb_insur_salary</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">加保日期</label>
                                        <div class="input">
                                            <p>@Model.mb_add_insur_date</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">退保日期</label>
                                        <div class="input">
                                            <p>@Model.mb_surrender_date</p>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">是否到職轉正</label>
                                        <div class="input checkbox">
                                            <input type="checkbox" id="Yes">
                                            <label for="Yes">是</label>
                                            <input type="checkbox" id="No">
                                            <label for="No">否</label>
                                        </div>
                                    </div>

                                    <div class="form-input">
                                        <label for="">至職轉正日期</label>
                                        <div class="input">
                                            <p>@Model.mb_full_time_date</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-btn">
                    <button class="btn-cancel" type="button" onclick="history.back()">返回</button>
                </div>
            </form>
        </div>
    </div>
</main>
